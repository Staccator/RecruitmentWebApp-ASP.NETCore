@model Recruitment.Core.Application

@{
    ViewData["Title"] = "Evaluate application";
}

<title>Evaluate Application</title>

<div>
    <h4>Application for <strong>@Model.OfferName</strong></h4>
    <hr />
    <form>
      <div class="form-group row">
          <label class="col-sm-2"><strong>@Html.DisplayNameFor(model => model.Name)</strong></label>
        <div class="col-sm-10">
            <label class="col-form-label">@Html.DisplayFor(model => model.Name)</label>
        </div>
      </div>
      <div class="form-group row">
          <label class="col-sm-2"><strong>E-mail</strong></label>
        <div class="col-sm-10">
            <label class="col-form-label">@Html.DisplayFor(model => model.CommunicationEmail)</label>
        </div>
      </div>
      <div class="form-group row">
          <label class="col-sm-2"><strong>@Html.DisplayNameFor(model => model.Phone)</strong></label>
        <div class="col-sm-10">
            <label class="col-form-label">@Html.DisplayFor(model => model.Phone)</label>
        </div>
      </div>
      <div class="form-group row">
          <label class="col-sm-2"><strong>@Html.DisplayNameFor(model => model.Info)</strong></label>
        <div class="col-sm-10">
            <label class="col-form-label">@Html.DisplayFor(model => model.Info)</label>
        </div>
      </div>
        <div class="form-group row">
            <label class="col-sm-2"><strong>@Html.DisplayNameFor(model => model.CvFile)</strong></label>
                <a href="@Model.CvFile" style="color: wheat" class="btn btn-dark">Download</a>
        </div>
        <hr/>
        <div class="form-group row">
            <a class="btn btn-success btn-lg" asp-action="Accept" asp-route-id="@Model.ApplicationId">Accept</a>
            <div class="col-sm-1"></div>
            <a class="btn btn-danger btn-lg" asp-action="Accept" asp-route-id="@Model.ApplicationId" asp-route-accept="false">Decline</a>
        </div>
    </form>
</div>
